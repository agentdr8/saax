<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <de.robv.android.xposed.library.ui.TextViewPreference
        android:selectable="false"
        textcolor="#000000"
        android:title="@string/headerTitle" />

    <de.robv.android.xposed.library.ui.SeparatorPreference height="3" />

    <de.robv.android.xposed.library.ui.ValueSeekBarPreference
        displayFormat="%d taps"
        max="999"
        min="1"
        android:defaultValue="6"
        android:key="pref_maxTaps"
        android:summary="@string/vsb1summary"
        android:title="@string/vsb1title" />

    <de.robv.android.xposed.library.ui.ValueSeekBarPreference
        displayFormat="%d MPH"
        max="999"
        min="1"
        android:defaultValue="150"
        android:key="pref_maxSensorSpeed"
        android:summary="@string/vsb2summary"
        android:title="@string/vsb2title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_ratelimit"
        android:summaryOn="@string/cb1summaryon"
        android:summaryOff="@string/cb1summaryoff"
        android:title="@string/cb1title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_passMode"
        android:summaryOn="@string/cb2summaryon"
        android:summaryOff="@string/cb2summaryoff"
        android:title="@string/cb2title" />

    <de.robv.android.xposed.library.ui.TextViewPreference
        android:selectable="false"
        textcolor="#000000"
        android:title="@string/debug_divider" />

    <de.robv.android.xposed.library.ui.SeparatorPreference height="3" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="debug"
        android:summary="@string/debug_summary"
        android:title="@string/debug_title" />

</PreferenceScreen>